<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>

      <div class="text-center">
        <%- include('includes/messages') %>
      </div>

      <div class="row">

        <div class="col-lg my-2">
          <div class="text-center">            
            <h4>Faça seu login</h4>
            <p>Se você ainda não tem conta, registre-se</p>
          </div>

          <form class="form-login" action="/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group mb-3">
              <label name="email">Seu e-mail</label>
              <input name="email" type="email" class="form-control" name="email">
            </div>
            <div class="form-group mb-3">
              <label name="password">Sua senha</label>
              <input name="password" type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Criar minha conta</button>
          </form>

        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>