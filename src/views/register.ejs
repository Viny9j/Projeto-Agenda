<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta</h1>

      <%- include('includes/messages') %>
      
      <div class="mensagens"></div>


      <div class="row">

        <div class="col-lg my-5">
          <div class="text-center">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
          </div>

          <form class="form-register" action="/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group mb-3">
              <label name="email">Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group mb-3">
              <label name="password">Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Criar minha conta</button>
          </form>
        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>